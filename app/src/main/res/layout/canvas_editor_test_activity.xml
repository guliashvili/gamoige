<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment android:name="com.gamoige.a.gamoige.DrawableCanvas.CanvasEditorFragment"
        android:id="@+id/canvas_editor_test_canvas_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <com.example.donskyproductions.canvastest.CanvasPreview
            android:id="@+id/canvas_editor_test_preview_0"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@android:color/white"/>
        <com.example.donskyproductions.canvastest.CanvasPreview
            android:id="@+id/canvas_editor_test_preview_1"
            android:layout_margin="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@android:color/white"/>
    </LinearLayout>
</LinearLayout>