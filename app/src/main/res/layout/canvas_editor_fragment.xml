<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/canvas_editor_undo"
            android:layout_margin="4dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert"/>
        <ImageView
            android:id="@+id/canvas_editor_redo"
            android:layout_margin="4dp"
            android:layout_width="48dp"
            android:scaleX="-1"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert"/>
        <SeekBar
            android:id="@+id/canvas_editor_size_slider"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="48dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/canvas_editor_eraser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_delete"/>
            <ImageView
                android:id="@+id/canvas_editor_pencil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_edit"/>
        </RelativeLayout>
    </LinearLayout>
    <com.example.donskyproductions.canvastest.CanvasView
        android:id="@+id/canvas_editor_canvas_view"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>
</LinearLayout>
