<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/canvas_draw_tool_bar_height">
        <ImageView
            android:id="@+id/canvas_editor_undo"
            android:layout_margin="@dimen/canvas_draw_tool_margin"
            android:layout_width="@dimen/canvas_draw_tool_width"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert"/>
        <ImageView
            android:id="@+id/canvas_editor_redo"
            android:layout_margin="@dimen/canvas_draw_tool_margin"
            android:layout_width="@dimen/canvas_draw_tool_width"
            android:scaleX="-1"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert"/>
        <SeekBar
            android:id="@+id/canvas_editor_size_slider"
            android:layout_margin="@dimen/canvas_draw_tool_margin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_margin="@dimen/canvas_draw_tool_margin"
            android:layout_width="@dimen/canvas_draw_tool_width"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/canvas_editor_eraser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/eraser"/>
            <ImageView
                android:id="@+id/canvas_editor_pencil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_edit"/>
        </RelativeLayout>
    </LinearLayout>
    <com.gamoige.a.gamoige.DrawableCanvas.CanvasView
        android:id="@+id/canvas_editor_canvas_view"
        android:layout_margin="@dimen/canvas_view_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"/>

    <LinearLayout
        android:id="@+id/color_pickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.flask.colorpicker.ColorPickerView
            android:id="@+id/color_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alphaSlider="true"
            app:density="12"
            app:lightnessSlider="true"
            app:wheelType="FLOWER"
            app:lightnessSliderView="@+id/v_lightness_slider"
            app:alphaSliderView="@+id/v_alpha_slider"
            />

        <com.flask.colorpicker.slider.LightnessSlider
            android:id="@+id/v_lightness_slider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

        <com.flask.colorpicker.slider.AlphaSlider
            android:id="@+id/v_alpha_slider"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

    </LinearLayout>

</LinearLayout>
